//
// Numbers
//

DIGIT: "0".."9"

HEXDIGIT: "a".."f" | "A".."F" | DIGIT

INT: DIGIT+
SIGNED_INT: ["+" | "-"] INT 
DECIMAL: INT "." INT? | "." INT

EXP: ("e" | "E") SIGNED_INT
FLOAT: INT EXP | DECIMAL EXP?
SIGNED_FLOAT: ["+" | "-"] FLOAT

NUMBER: FLOAT | INT
SIGNED_NUMBER: ["+" | "-"] NUMBER

//
// Strings
//

STRING_INNER: ".*?"
STRING_ESC_INNER: STRING_INNER "(?<!\\)(\\\\)*?"

ESCAPED_STRING : '"' STRING_ESC_INNER '"'

SIMPLE_TEST : ((('a' | 'b'))) 'c'{4, 6}

//
// Names (Variables)
//
LCASE_LETTER: "a".."z"
UCASE_LETTER: "A".."Z"

LETTER: UCASE_LETTER | LCASE_LETTER
WORD: LETTER+

CNAME: ("_" | LETTER) ("_" | LETTER | DIGIT)*


//
// Whitespace
//
WS_INLINE: (" " | "\t")+
WS: "\s"+

CR : "\r"
LF : "\n"
NEWLINE: (CR? LF)+


// Comments
SH_OCOMMENT: "#[^\n]*"
CPP_CMMENT: "//[^\n]*"
C_COMMENT: "/*(.|\n)*?*/"
SQL_COMMENT: "--[^\n]*"